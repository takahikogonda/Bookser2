<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:success] %>
  <div class="flash">
    <%= flash[:success] %>
  </div>
<% end %>
<div class="col-xs-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
  <span><%= link_to "プロフィール編集", edit_user_path(@user) %></span>
  </div>
    <h2>New book</h2>
    <div class="field row">
      <label for="book_title">Title</label>
    </div>
    <div class="field row">
      <label for="book_opinion">Opinion</label>
    </div>
    <div class="row">
      <%= form_for(@book) do |f| %>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
          <label class="control-label sr-only">タイトル</label>
          <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
          <%= f.text_area :body, class:"form-control",　placeholder:"ボディ" %>
        <%= f.submit "Create Book" %>
      <% end %>
    </div>
  </div>
    <div class="col-xs-9">
      <table class="table">
    <h2>Books</h2>
    <% @user.books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
</div>