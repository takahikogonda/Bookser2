<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
	<table class="table">
	  <tbody>
	    <tr></tr>
	    <tr>
	      <th>name</th>
	      <th><%= @user.name %></th>
	    </tr>
	    <tr>
	      <th>introduction</th>
	      <th><%= @user.introduction %></th>
	    </tr>
	</tbody>
</table>
<div class="row">
	<%= link_to edit_user_path(@user) do %>
	<span class= "glyphicon glyphicon-wrench pull-left btn btn-default btn-block"></span>
	<% end %>
	<h2>New book</h2>
	<div class="field row">
		<label for="book_title">Title</label>
	</div>
	<div class="field row">
		<label for="book_opinion">Opinion</label>
	</div>
	<div class="row">
		<%= form_for(@book) do |f| %>
			<% if @book.errors.any? %>
			  <div id="error_explanation">
			    <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
			    <ul>
				    <% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
			    	<% end %>
			    </ul>
			  </div>
			<% end %>
	    	<label class="control-label sr-only">タイトル</label>
	    	<%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
	    	<%= f.text_area :body, class:"form-control",　placeholder:"ボディ" %>
			<%= f.submit "Create Book" %>
		<% end %>
	</div>
</div>
</div>
	<div class="col-xs-9">
	<h1>Users</h1>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, size: "60x60" ,fallback: "no_image" %></td>
						<td><%= user.name %></td>
						<td><%= link_to "Show",user_path(user)%></td>
					</tr>
				<% end %>
				</tr>
			</tbody>
		</table>
	</div>