<div class="col-xs-3">
<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>
<% if @book.errors.any? %>
		  <div id="error_explanation">
		    <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
		    <ul>
			    <% book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
		    	<% end %>
		    </ul>
		  </div>
		<% end %>
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<table class="table">
	<tbody>
		<tr>
		  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
	</tbody>
</table>
<div class="row">
	<p><%= link_to "", edit_user_path(@user), class: "glyphicon glyphicon-wrench pull-left btn btn-default btn-block" %>
</p>
</div>
<h2>New book</h2>
<div class="row">
	<%= form_for(book) do |f| %>
		<div class="field row">
			<label for="book_title">Title</label>
			<%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
		</div>
		<div class="field row">
			<label for="book_opinion">Opinion</label>
			<%= f.text_area :body, class:"form-control",　placeholder:"ボディ" %>
		</div>
		<%= f.submit "Create Book", class:"btn btn-primary" %>
	<% end %>
</div>
</div>