<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
	<h4>title</h4>
	<%= f.text_field :title %>
	<h4>opinion</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show",book_path(@book.id) %>
<%= link_to "Back",books_path %>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
    <ul>
	    <% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
    	<% end %>
    </ul>
  </div>
<% end %>