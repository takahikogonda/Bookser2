<div class="body">
      <div class="container">
        <p id="notice"></p>
        <div class="row">
          <div class="col-xs-3">
            <h2>User info</h2>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
              <div class="row">
                <span><%= link_to "プロフィール編集", edit_user_path(@user) %></span>
              </div>
              <div class="row"></div>
              <h2>New book</h2>
              <div class="field row">
                <label for="book_title">Title</label>
              </div>
              <div class="field row">
                <label for="book_opinion">Opinion</label>
              </div>
              <%= form_for(@book) do |f| %>
                <% if @book.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
                    <ul>
                    <% @book.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group has-icon">
                      <label class="control-label sr-only">タイトル</label>
                      <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
                      <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                    </div>
                  </div>
                  <div class="col-sm-6">
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <%= f.text_area :body, class:"form-control",　placeholder:"ボディ" %>
                  </div>
                </div>
                <hr>
                <%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
              <% end %>